<% @recipes.each_slice(3) do |recipe| %>
  <div class="row">
    <% recipe.each do |recipe_row| %>
    <div class="col-md-4">
      <div class="recipe">
        <div class="image_wrapper">
        <%= link_to recipe_row do %>
          <%= image_tag recipe_row.image.url(:medium) %>
        <% end %>
        </div>
        <h2><%= link_to recipe_row.title, recipe_path(recipe) %></h2>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
